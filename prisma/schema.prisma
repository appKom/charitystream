generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL")
}

model Bid {
  id           String   @id @default(cuid())
  amount       Float
  nameOfBidder String
  Auction      Auction? @relation(fields: [auctionId], references: [id])
  auctionId    String?
}

model Auction {
  id          String @id @default(cuid())
  name        String
  description String
  bids        Bid[]
}
